{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TypeScript",
      "runtimeArgs": [
        "--loader",
        "tsx"
      ],
      "args": [
        "${workspaceFolder}/src/server.ts"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "restart": true,
      "restartSuggested": true,
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}